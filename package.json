{
  "name": "rwsdk-drizzle-ba_starter",
  "version": "0.0.1",
  "description": "Build fast, server-driven webapps on Cloudflare with SSR, RSC, and realtime.",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "vite build",
    "dev": "vite dev",
    "preview": "vite preview",
    "worker:run": "rw-scripts worker-run",
    "release": "rw-scripts ensure-deploy-env && npm run clean && bun migrate:new && bun migrate:prd && RWSDK_DEPLOY=1 npm run build && wrangler deploy",
    "clean": "npm run clean:vite",
    "clean:vite": "rm -rf ./node_modules/.vite",
    "ba:generate": "npx @better-auth/cli@latest generate --config src/lib/auth-cli.ts --output src/db/auth-schema.ts",
    "db:generate": "rw-scripts ensure-env && bun --bun drizzle-kit generate && wrangler types",
    "db:studio": "drizzle-kit studio",
    "migrate:new": "bun ba:generate && bun db:generate",
    "migrate:dev": "wrangler d1 migrations apply DB --local",
    "migrate:prd": "wrangler d1 migrations apply DB --remote",
    "seed": "npm run worker:run ./src/scripts/seed.ts",
    "check": "npm run generate && npm run types",
    "types": "tsc",
    "prepare": "vibe-rules install cursor"
  },
  "dependencies": {
    "@better-auth/cli": "^1.3.26",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@tailwindcss/vite": "^4.1.14",
    "better-auth": "^1.3.26",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.44.6",
    "lucide-react": "^0.540.0",
    "react": "^19.3.0-canary-85c427d8-20251003",
    "react-dom": "^19.3.0-canary-85c427d8-20251003",
    "react-server-dom-webpack": "^19.3.0-canary-85c427d8-20251003",
    "rwsdk": "1.0.0-beta.9",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.14",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.13.10",
    "@cloudflare/workers-types": "^4.20251003.0",
    "@types/bun": "^1.2.23",
    "@types/node": "^22.18.8",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "drizzle-kit": "^0.31.5",
    "tsx": "^4.20.6",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "vibe-rules": "^0.2.57",
    "vite": "^6.3.6",
    "wrangler": "^4.42.0"
  }
}
